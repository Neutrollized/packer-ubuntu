{
  "variables": {
    "packer_user": "packer",
    "packer_password": "packer",
    "cpus": "1",
    "memory": "2048",
    "headless": "true",
    "http_directory": "http/base-ubuntu1604",
    "iso_name": "{{pwd}}/iso/ubuntu-16.04.4-server-amd64.iso",
    "iso_checksum": "0a03608988cfd2e50567990dc8be96fb3c501e198e2e6efcb846d89efc7b89f2",
    "iso_checksum_type": "sha256",
    "guest_os_type": "Ubuntu_64",
    "vagrant_output_dir": "{{pwd}}/vagrant_box"
  },
  "builders": [
    {
      "name": "ubuntu-vbox-base",
      "type": "virtualbox-iso",
      "iso_url": "{{user `iso_name`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "guest_os_type": "{{user `guest_os_type`}}",
      "guest_additions_mode": "disable",
      "headless": "{{user `headless`}}",
      "http_directory": "{{ user `http_directory`}}",
      "disk_size": 20480,
      "vboxmanage": [
        ["modifyvm","{{.Name}}","--cpus","{{user `cpus`}}"],
        ["modifyvm","{{.Name}}","--memory","{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--pae", "on"],
        ["modifyvm", "{{.Name}}", "--rtcuseutc", "on"],
        ["modifyvm", "{{.Name}}", "--bioslogodisplaytime", "1"]
      ],
      "communicator": "ssh",
      "ssh_username": "{{user `packer_user`}}",
      "ssh_password": "{{user `packer_password`}}",
      "ssh_port": 22,
      "ssh_timeout": "20m",
      "shutdown_command": "echo '{{user `packer_user`}}'|sudo -S /sbin/halt -h -p",
      "boot_wait": "10s",
      "boot_command": [
        "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname=base-ubuntu1604<wait>",
        " grub-installer/bootdev=/dev/sda<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/vbox-preseed.cfg",
        " -- <wait>",
        "<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-get install -y virtualbox-guest-dkms build-essential linux-headers-generic linux-headers-virtual",
        "sudo apt-get clean"
      ]
    },	
    {
      "type": "shell",
      "script": "{{pwd}}/scripts/reboot.sh"
    },
    {
      "type": "ansible",
      "user": "{{user `packer_user`}}",
      "extra_arguments": ["--verbose", "--diff"],
      "playbook_file": "{{pwd}}/ansible/playbook.yml"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "{{user `vagrant_output_dir`}}/base-ubuntu1604.box",
      "compression_level": 9
    }
  ]
}
